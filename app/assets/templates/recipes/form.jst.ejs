<form id="recipe-form" enctype="multipart/form-data">
  <label for="title">Title</label>
  <input type="text" name="title" id="title">
  
  <label for="blog_url">Blog Url</label>
  <input type="text" name="blog_url" id="blog_url">
  
  <label for="description">Description</label>
  <input type="text" name="description" id="description">

  <!-- need to change this input type   -->
  <label for="total_time">Total Time</label>
  <input type="number" name="total_time" id="total_time">

  <input type="file" id="photo" name="photo">
  
  <label>Categories</label>
  
  <% FoodgawkerApp.Data.categories.forEach(function(category) { %>
    <label for="<%= category.name %>"><%= category.name %></label>
    <input type="checkbox" 
           id="<%= category.name %>" 
           name="recipe_categories[<%= category.id %>][category_id]"
           value="<%= category.id %>">
  <% })%>
  
  <button type="submit" id="recipe-form-button">Add Recipe</button>  
</form>