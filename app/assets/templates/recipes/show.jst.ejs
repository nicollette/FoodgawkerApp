<div class="row">

  <div class="col-md-8">
    <center><h1><%= recipe.get("title").toUpperCase()%></h1></center>
    <div id="arrows">
      <button id="prev-btn" class="arrow-btn signout"><span class="glyphicon glyphicon-chevron-left"></span></button>
    </div>
    <img class="large shadow img-rounded" src="<%= recipe.get('large_photo_url')%>">
    <div id="arrows">
      <button id="next-btn" class="arrow-btn signout"><span class="glyphicon glyphicon-chevron-right"></span></button>
    </div>
    <br>
    <br>
    <p class="detail-text">Description: <%= recipe.get("description") %></p>
    <p class="detail-text">Total Time: <%= recipe.get("total_time") %> minutes</p>
    <p class="detail-text"><a href="<%= recipe.get("blog_url")%>">source</a></p>

    <% if (recipe.get("favorites").length < 1 ) { %>
      <button id="favorite" data-recipe-id="<%= recipe.id %>">Favorite</button>
    <% } else { %>
      <button id="unfavorite" data-recipe-id="<%= recipe.id %>">Unfavorite</button> 
    <% } %>
    
    <h5>Categories</h5>
    <ul>
    <% recipe.get("categories").forEach(function(category) { %>
      <li class="detail-text"><%= category.name %></li>
    <% }) %>
    </ul>
  </div>

  <div id="side-bar" class="col-md-4">
    <center><h3>peep these tasty recipes</h3></center>
    <div class="row" id="row1">
      <div class="col-md-6">
        <a href="#recipes/<%= relatedRecipes[0].id %>" class="thumbnail">
          <img src="<%= relatedRecipes[0].get('med_photo_url') %>">
        </a>
      </div>
      <div class="col-md-6">
        <a href="#recipes/<%= relatedRecipes[1].id %>" class="thumbnail">
          <img src="<%= relatedRecipes[1].get('med_photo_url') %>">
        </a>
      </div>
    </div>
    
    <div class="row" id="row2">
      <div class="col-md-6">
        <a href="#recipes/<%= relatedRecipes[2].id %>" class="thumbnail">
          <img src="<%= relatedRecipes[2].get('med_photo_url') %>">
        </a>
      </div>
      <div class="col-md-6">
        <a href="#recipes/<%= relatedRecipes[3].id %>" class="thumbnail">
          <img src="<%= relatedRecipes[3].get('med_photo_url') %>">
        </a>
      </div>
    </div>
    
    <div class="row" id="row3">
